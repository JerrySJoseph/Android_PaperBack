<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.CreateNoteActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/appbar_layout"
                android:layout_marginTop="@dimen/_20ssp"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/arrow_back"
                   android:layout_alignParentLeft="true"
                    android:layout_width="@dimen/_25ssp"
                    android:layout_height="@dimen/_25ssp"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/colorIcons"/>
                <ImageView
                    android:id="@+id/save_img"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_25ssp"
                    android:layout_height="@dimen/_25ssp"
                    android:padding="@dimen/_3sdp"
                    android:background="@drawable/bg_circle_done"
                    android:src="@drawable/ic_done"
                    android:visibility="gone"
                    android:tint="@color/colorAccent"/>
                <TextView
                    android:id="@+id/save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVE"
                    android:visibility="gone"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textSize="@dimen/_15ssp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <EditText
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/appbar_layout"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:hint="Note Title"
                android:background="@null"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:includeFontPadding="false"
                android:textSize="@dimen/_17sdp"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorTextHint"/>
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/note_title"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/note_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu"
                android:text="Sunday 2 April 2020   10:00 AM"
                android:background="@null"
                android:includeFontPadding="false"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorTextHint"
               />
            <LinearLayout
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_rounded_corner"
                android:id="@+id/img_layout"
                android:layout_below="@id/note_datetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView

                    android:adjustViewBounds="true"
                    android:id="@+id/note_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sub_layout"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_20ssp"
                android:layout_below="@id/img_layout"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:minHeight="@dimen/_30sdp"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/subcolor_indicator"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_subtitle_indicator"/>
                <EditText
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:id="@+id/note_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_medium"
                    android:hint="Sub Title"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorTextHint"/>
            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20ssp"
                android:id="@+id/note_layout"
                android:layout_below="@id/sub_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/note_link"
                    android:autoLink="web"
                    android:drawableRight="@drawable/ic_delete"
                    android:drawableTint="@color/colorNoteColor3"
                    android:textColor="@color/colorAccent"
                    android:text="web link"
                    android:textSize="@dimen/_15ssp"/>
            </LinearLayout>


            <EditText
                android:layout_marginTop="@dimen/_20ssp"
                android:layout_below="@id/note_layout"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/note_text"
                android:minHeight="@dimen/_300sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/ubuntu"
                android:gravity="top"
                android:hint="Type your note here."
                android:background="@null"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:includeFontPadding="false"
                android:textSize="@dimen/_15ssp"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorTextHint"/>
        </RelativeLayout>
    </ScrollView>
<include layout="@layout/options_bottomsheet"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>